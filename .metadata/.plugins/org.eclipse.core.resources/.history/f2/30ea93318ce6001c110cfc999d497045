package com.estockCogJava1187.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.estockCogJava1187.entity.Company;
import com.estockCogJava1187.repository.CompanyRepository;

@Service
public class CompanyService {
	
	@Autowired
	private CompanyRepository companyRepository;
    
	public Company addCompany(Company company)
	{
		return companyRepository.save(company);
	}
	
	
	public Company getCompany(int companyCode)
	{
		Company company =new  Company();
		company.setCompanyCode(companyCode);
		return companyRepository.findById(company.getCompanyCode()).orElse(null);
	}
}
